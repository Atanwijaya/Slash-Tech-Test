<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Slash Web</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <environment include="Development">
        <link rel="stylesheet" asp-append-version="true" href="~/css/lib/slash.dependencies.bundle.css" />
        <link rel="stylesheet" asp-append-version="true" href="~/css/site.css" />
    </environment>
    <environment include="Production">
        <link rel="stylesheet" asp-append-version="true" href="~/css/lib/slash.dependencies.bundle.min.css" />
        <link rel="stylesheet" asp-append-version="true" href="~/css/site.css" />
    </environment>
</head>
<body>
    @RenderBody()
    <environment include="Production">
        <script type="text/javascript" asp-append-version="true" src="~/js/lib/slash.dependencies.bundle.js"></script>
        <script type="text/javascript" asp-append-version="true" src="~/js/utility.js"></script>
    </environment>
    <environment include="Development">
        <script type="text/javascript" asp-append-version="true" src="~/js/lib/slash.dependencies.bundle.min.js"></script>
        <script type="text/javascript" asp-append-version="true" src="~/js/utility.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>

